import java.awt.List;
import java.util.ArrayList;
import java.util.Scanner;

public class GameEngine {

	private static ArrayList<Player> players;

	public static void main(String[] args) {
		Deck deck = new Deck();
		Dealer dealer = new Dealer();
		Player player1 = new Player();
		players = new ArrayList<Player>();
		players.add(dealer);
		players.add(player1);
		// TODO Auto-generated method stub
		for (Player player : players) {
			player.getHand().addToHand(deck.getCard());
			player.getHand().addToHand(deck.getCard());
		}

		// Generate reports
		System.out.println(dealer.status());

		System.out.println("Final Scores: \n You had:" + player1.getHand().calculateScore() +
		dealer.getHand().calculateScore() + "\n");
		player1.turn();
		dealer.turn();

		if (player1.getHand().calculateScore() <= 21) {
			if (player1.getHand().calculateScore() > dealer.getHand().calculateScore()) {
				System.out.println("You won!");

			} else {
				if (dealer.getHand().calculateScore() <= 21) {
					System.out.println("Dealer Wins.");
				} else {
					System.out.println("Dealer Busts. You win!!");
				}
			}
		} else {
			System.out.println("You lost");
		}
	}

}
